<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean class="com.baidu.brpc.spring.EchoServiceImpl" id="echoService"></bean>

  <bean class="com.baidu.brpc.spring.RpcServiceExporter" id="rpcServer1">
    <property name="servicePort" value="1031"></property>
    <property name="registerServices">
      <list>
        <ref bean="echoService"/>
      </list>
    </property>
  </bean>
  <bean class="com.baidu.brpc.spring.RpcServiceExporter" id="rpcServer2">
    <property name="servicePort" value="1032"></property>
    <property name="registerServices">
      <list>
        <ref bean="echoService"/>
      </list>
    </property>
  </bean>
  <bean class="com.baidu.brpc.spring.RpcServiceExporter" id="rpcServer3">
    <property name="servicePort" value="1033"></property>
    <property name="registerServices">
      <list>
        <ref bean="echoService"/>
      </list>
    </property>
  </bean>


  <bean class="com.baidu.brpc.spring.RpcProxyFactoryBean" id="echoServiceProxy">
    <property name="serviceInterface" value="com.baidu.brpc.spring.EchoService"></property>
    <property name="namingServiceUrl"
      value="list://127.0.0.1:1031,127.0.0.1:1032,127.0.0.1:1033"></property>
    <property name="healthyCheckIntervalMillis" value="3000"/>
  </bean>
</beans>
